<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :studentid, autofocus: true, autocomplete: "off", required: true, placeholder: "Student ID", class: "input" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "off", required: true, placeholder: "Email", class: "input" %>
  </div>

  <div class="field">
    <%= f.text_field :first, autocomplete: "off", required: true, placeholder: "First name", class: "input" %>
  </div>

  <div class="field">
    <%= f.text_field :last, autocomplete: "off", required: true, placeholder: "Last name", class: "input" %>
  </div>

  <div class="field">
    <%= f.select(:home, User.all.where(role: 1).collect {|a| [a.last, a.id]}, {prompt: "MTSS Homeroom"}, {class: "input", required: true}) %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Password", class: "input" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "Confirm Password", class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "submit" %>
  </div>
<% end %>
<style>

h2 {
  font-family: 'HKGrotesk-Bold';
  font-size: 27px;
  text-align: center;
  margin-top: 52px;
  color: #3c73ff;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  margin-bottom: 70px;
}
</style>
