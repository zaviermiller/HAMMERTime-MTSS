<h2>Add a Friend</h2>

<%= form_with(model: @request) do |form| %>
  <div class="field">
    <%= form.text_field :name, placeholder: "Friend's first name", class: "input" %>
  </div>

  <div class="actions">
    <%= form.submit "Search", class: "submit" %>
  </div>
<% end %>
